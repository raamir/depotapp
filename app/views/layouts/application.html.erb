<!DOCTYPE html>
<html>
  <head>
    <title>Bookshelf</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="container">
    <nav class="navbar navbar-default">
  
    <div class="navbar-header">
    <a class="navbar-brand" href="/"><%= image_tag 'rails.png', alt: 'The Major Depot' %></a>
    </div>
        <h1> </h1>
    <ul class="nav navbar-nav">
      <li><a href="/static_pages/home", class= "link">Home</a></li>
      <li><a href="/store/index", class= "link">Store</a></li>
      <li><a href="/static_pages/contact", class= "link">Contact Us</a></li>
      <li><%= button_to 'Login', login_path, method: :create , class:"btn btn-primary" %></li>
      <% if session[:user_id] %>
      <li><%= link_to 'Orders', orders_path %></li>
      <li><%= link_to 'Carts', carts_path %></li>
      <li><%= link_to 'Products', products_path %></li>
      <li><%= link_to 'Users', users_path %></li>
      <li><%= button_to 'Logout', logout_path, method: :delete , class:"btn btn-default" %></li>
     <% end %>
      </ul>
    </nav>
    <div>
    <%= yield %>
    
    </div>
  </body>
</html>
